<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsMiniBurger"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="412dp"
        android:layout_height="278dp"
        android:layout_gravity="top|center"
        app:srcCompat="@drawable/burgermini"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Mini Burger"
        android:textColor="#201E1E"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="serif-monospace"
        android:text=" A delicious mini burger with 2 tempting strips inside a bun"
        android:textColor="#971818"
        android:textSize="20sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:text="Extra "
        android:textColor="#FFC107"
        android:textSize="20sp"
        android:textStyle="bold" />
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="3dp"
        android:text="Cheese"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="3dp"
        android:text="ketchup"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="3dp"
        android:text="mayonnaise"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="3dp"
        android:text="Tomato"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="3dp"
        android:text="Lettuce"
        android:textSize="15sp"
        android:textStyle="bold"

        />

    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="3dp"
        android:text="Fried potatoes "
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="3dp"
        android:text="Hot Pepper "
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <CheckBox
        android:id="@+id/checkBox7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="3dp"
        android:text="Mustard"
        android:textSize="15sp"
        android:textStyle="bold"
        />

</LinearLayout>